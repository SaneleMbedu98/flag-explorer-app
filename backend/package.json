{
  "name": "flag-explorer-backend",
  "version": "1.0.0",
  "description": "Backend for Flag Explorer App",
  "main": "app.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "build": "npm run clean && npm run lint && tsc && npm run copy-configs",
    "copy-configs": "cp .env dist/.env",
    "minify": "terser dist/**/*.js --compress --mangle --output dist/"
  },

  "dependencies": {
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^9.26.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.3",
    "terser": "^5.39.0",
    "typescript": "^5.8.3"
  }
}
